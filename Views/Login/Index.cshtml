
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        .login-form {
            width: 340px;
            margin: 50px auto;
            font-size: 15px;
        }

            .login-form form {
                margin-bottom: 15px;
                background: #f7f7f7;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 30px;
            }

            .login-form h2 {
                margin: 0 0 15px;
            }

        .form-control, .btn {
            min-height: 38px;
            border-radius: 2px;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="login-form">
        <form action="@*http://isapi.icu-tech.com/icutech-test.dll*@" method="post">
            <h2 class="text-center">Log in</h2>
            <div class="form-group">
                <input id="loginId" type="text" class="form-control" placeholder="Username" required="required">
            </div>
            <div class="form-group">
                <input id="passwordId" type="password" class="form-control" placeholder="Password" required="required">
            </div>
            <div class="form-group">
              
                <input id="button_1" type="button" class="btn btn-primary btn-block" value="Log in">
            </div>

            @*<div class="clearfix">
                    <label class="float-left form-check-label"><input type="checkbox"> Remember me</label>
                    <a href="#" class="float-right">Forgot Password?</a>
                </div>*@
        </form>
        @*<p class="text-center"><a href="#">Create an Account</a></p>*@
    </div>
</body>
</html>
<script>

    $("#button_1").click(function (e) {
        var log = document.getElementById('loginId').value;
        var pass = document.getElementById('passwordId').value;
        console.log("Login: " + log + " password: " + pass);
        if (log==''|| pass=='') {
        return;
        }
        e.preventDefault();
        $.ajax({
            type: "GET",
            url:  "/Login/CheckLoginAsync",
            contentType: 'application/json;charset=utf-8',
            data: {
                login: log/* $("#loginId").val()*/,
                password: pass /*$("#passwordId").val()*/
            },
            success: function (result) {
                alert('ok');
            },
            error: function (result) {
                alert('error');
            }
        });
    });
</script>

